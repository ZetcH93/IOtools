<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#00D30000"
        app:columnCount="4">

        <androidx.cardview.widget.CardView
            android:id="@+id/gridCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#528D8989"
            app:layout_column="1"
            app:layout_row="0">

            <ImageButton
                android:id="@+id/imageBtnNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#414141"
                android:clickable="true"
                android:cropToPadding="true"
                android:elevation="1dp"
                android:importantForAccessibility="yes"
                android:onClick="noteIdOpen"
                android:scaleType="fitStart"
                android:src="@drawable/notepicture" />

            <TextView
                android:id="@+id/gridText"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:autoText="false"
                android:clickable="false"
                android:contextClickable="false"
                android:cursorVisible="false"
                android:duplicateParentState="false"
                android:editable="false"
                android:elevation="1dp"
                android:enabled="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:labelFor="@id/imageBtnNote"
                android:linksClickable="false"
                android:longClickable="false"
                android:text="This is a typical topic"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#050507"
                android:textIsSelectable="false"
                android:textSize="10sp"
                android:textStyle="italic"
                android:typeface="normal"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>